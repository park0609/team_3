    "english = input(\"문장을 입력하세요!\")\n",
    "a = english.split()\n",
    "sentence = []\n",
    "for n in range (0,len(a)):\n",
    "    b = a[n]\n",
    "    c = a[n][0]\n",
    "    d = c.upper()\n",
    "    e = b.replace(c,d)\n",
    "    f = sentence.append(e)\n",
    "    g = \" \".join(sentence)\n",
    "print(g)"
   ]
